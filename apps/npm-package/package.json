{
  "version": "1.1.0",
  "license": "MIT",
  "name": "hookform-input",
  "author": "EmilMalanczak",
  "description": "Smart, polymorphic and typesafe Input component for react-hook-form",
  "keywords": [
    "react",
    "react-hook-form",
    "utility"
  ],
  "homepage": "https://hookform-input-documentation-git-main-emilmalanczaks-projects.vercel.app/",
  "bugs": {
    "url": "https://github.com/EmilMalanczak/hookform-input"
  },
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo node_modules",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@rhfi/eslint-config": "workspace:^0.1.0",
    "@rhfi/prettier-config": "workspace:^0.1.0",
    "@rhfi/ts-config": "workspace:^0.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.13.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-hook-form": "^7.51.5",
    "turbo": "^2.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "@types/jest": "^29.5.12",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-hook-form": "^7.51.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@rhfi/eslint-config",
      "@rhfi/eslint-config/react"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "vite.config.ts"
    ]
  },
  "prettier": "@rhfi/prettier-config"
}
